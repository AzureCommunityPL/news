{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apiConnectionName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Describes the name of the Api Connection resource"
            }
        },
        "storageAccountName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Describes the name of the Storage Account resource"
            }
        },
        "storageAccountKey": {
            "type": "securestring",
            "minLength": 1,
            "metadata": {
                "description": "Storage Account Key"
            }
        }
    },
    "variables": {},
    "resources": [{
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "location": "[resourceGroup().location]",
        "name": "[parameters('apiConnectionName')]",
        "properties": {
            "api": {
                "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azureblob')]"
            },
            "displayName": "azureblob",
            "parameterValues": {
                "accountName": "[parameters('storageAccountName')]",
                "accessKey": "[parameters('storageAccountKey')]"
            }
        }
    }]
}