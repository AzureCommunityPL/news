{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "storageName": {
            "type": "string"
        },
        "appInsightsName": {
            "type": "string"
        },
        "storageAccountKey": {
            "type": "securestring",
            "minLength": 1,
            "metadata": {
                "description": "Storage Account Key"
            }
        }
    },
    "variables": {
        "storageConnectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageName'),';AccountKey=',parameters('storageAccountKey'))]"
    },
    "resources": [
        {
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "dotnet"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[variables('storageConnectionString')]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[variables('storageConnectionString')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(parameters('name')), '9d54')]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "10.14.1"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('appInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "TableStorage-Name",
                            "value": "news"
                        },
                        {
                            "name": "AccountStorage-Conn",
                            "value": "[variables('storageConnectionString')]"
                        },
                        {
                            "name": "Queue-Name",
                            "value": "news"
                        }
                    ]
                },
                "name": "[parameters('name')]",
                "clientAffinityEnabled": false,
                "reserved": false
            }
        }
    ],
    "outputs": {}
}