{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "api": {
      "matchCondition": {
        "route": "/api/{*restOfPath}"
      },
      "backendUri": "https://%WEBSITE_SITE_NAME%.azurewebsites.net/api/{restOfPath}",
      "debug": true
    },
    "appResources": {
      "matchCondition": {
        "route": "/storage/{*restOfPath}"
      },
      "backendUri": "https://%AccountStorage-Name%.table.core.windows.net/{*restOfPath}",
      "debug": true
    },
    "app": {
      "matchCondition": {
        "route": "{*restOfPath}"
      },
      "backendUri": "https://%AccountStorage-Name%.z6.web.core.windows.net/{restOfPath}",
      "debug": true
    }
  }
}